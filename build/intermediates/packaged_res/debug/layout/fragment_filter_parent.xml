    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_filter_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/fragment_filter_parent_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/filter_container1"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            app:defaultNavHost="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/nav_filter" />

        <!--<FrameLayout
            android:id="@+id/filter_container2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->

        <Button
            android:id="@+id/button"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_corner"
            android:tag="binding_1"                               
            android:text="재검색"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_this_loc"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_container1" />

        <Button
            android:id="@+id/btn_this_loc"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_corner"
            android:tag="binding_2"                                 
            android:text="이 지역 검색"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/constraintLayout2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/button" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/shape_corner"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_this_loc"
            app:layout_constraintTop_toTopOf="@+id/btn_this_loc" android:tag="binding_3">

            <include
                layout="@layout/item_nation1"
                                                                 
                                                                />
        </androidx.constraintlayout.widget.ConstraintLayout>

